<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:MyApp.UI">
  <Design.PreviewWith>
    <controls:Icon />
  </Design.PreviewWith>

  <Style Selector="controls|Icon">
    <!-- Set Defaults -->
    <Setter Property="Template">
      <ControlTemplate>
        <ContentControl Content="{TemplateBinding Image}" />
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
